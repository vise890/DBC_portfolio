.well.container
  %h1 Sign Up
  %form#sign-up{ method: "post", action: "/users" }

    %label{ for: "name" } Name
    %input.form-control{ type: "text", name: "user[name]", placeholder: "e.g., Joe" }

    %label{ for: "email" } Email
    %input.form-control{ type: "email", name: "user[email]", placeholder: "e.g., me@example.com" }

    %label{ for: "password" } Password
    %input.form-control{ type: "password", name: "user[password]", placeholder: "6 or more characters" }

    %br
    %input.btn.btn-success{ type: "submit", value: "Sign Up" }
